.top
    display flex
    flex-direction row
    justify-content space-between
    background-color #3f414e
    color #FBFBFB

    &__hello
        margin 4.8rem
        margin-bottom 1rem
        flex 1 1 40%

    &__contacts
        margin 4.8rem 0
        margin-right 4.8rem

    &__photo
        line-height 0
        width 24rem

    &__img
        width 24rem
        min-height 24rem
        height 100%
        background-size 100% auto
        background-repeat no-repeat

    h2
        margin 1rem 0
        font-size 2.8rem
