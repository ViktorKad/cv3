.timeline
    &__part
        display flex

    &__left
    &__right
        flex 1 1 50%
        padding 4.8rem
        padding-bottom 0

    &__left
        background-color #FBFBFB
        color #3F414E
        display flex
        justify-content flex-end
        padding-right 0
        border-right .6rem solid #F17351

    &__right
        background-color #3F414E
        color #DCDEE0
        padding-left 0
        border-left .6rem solid #FBFBFB

    &__position
        font-weight 600

    &_first
        .timeline__left
            border-top .6rem solid #FBFBFB

        .timeline__right
            border-top .6rem solid #3F414E

    &_last
        .timeline__left
            border-bottom .6rem solid #FBFBFB
            padding-bottom 4.8rem

        .timeline__right
            border-bottom .6rem solid #3F414E
            padding-bottom 4.8rem

    &__desc
    &__date
        padding-top 1.2rem

    &__left
        .timeline__desc
            padding-right 4.8rem
            border-top .3rem solid #F17351
            width 100%

    &__right
        .timeline__desc
            padding-left  4.8rem
            border-top .3rem solid #FBFBFB

    &__desc div
        margin-top .8rem

    &__date
        display inline-block

    &__left
        .timeline__date
            padding-right  4.8rem
            border-top .3rem solid #F17351

    &__right
        .timeline__date
            padding-left  4.8rem
            border-top .3rem solid #FBFBFB

    &__label
        letter-spacing .1rem
        font-style italic
        color #F17351

    &__left
        .timeline__label
            color #3F414E
