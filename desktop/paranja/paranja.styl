.paranja
    z-index 100
    display block

    .js__support_yes.js__good_yes.flex__support_yes &
        display none

    &
    &:before
    &__bg
        position fixed
        width 100%
        height 100%
        left 0
        top 0

    &:before
        content ''
        background-color #010101
        background-image url('./desktop/paranja/assets/paranja__bg.jpg')
        background-size 100% auto
        background-repeat no-repeat

    &__bg
        background-color rgba(0, 0, 0, .8)

    &__content
        position fixed
        top 30%
        width 50%
        left 50%
        margin-left -25%
        padding 3.2rem
        background-color #3F414E
        color #FBFBFB
        letter-spacing 1px

    .link
        color #F17351
